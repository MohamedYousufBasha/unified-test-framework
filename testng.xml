<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Unified Test Automation Suite" parallel="tests" thread-count="3">
    
    <listeners>
        <listener class-name="com.automation.listeners.TestListener"/>
    </listeners>

    <!-- Web Tests -->
    <test name="Web Tests - Chrome">
        <parameter name="platform" value="web"/>
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.automation.tests.web.LoginTest"/>
        </classes>
    </test>

    <!-- API Tests -->
    <test name="API Tests">
        <parameter name="platform" value="api"/>
        <classes>
            <class name="com.automation.tests.api.UserApiTest"/>
        </classes>
    </test>

